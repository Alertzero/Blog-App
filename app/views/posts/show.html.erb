<div style="width:100%", height: 300px; overflow-y:hidden>
  <%= image_tag(@post.banner, style: "width:100%") %>
</div>
<div class="container" style="margin-top: 2em;">
  <div class="row">
    <div class="jumbotron" style="width:100%">
      <h1 class="display-4">
        <%= link_to @post.title, root_path%>
      </h1>
      <p class="lead">
        Posted at <%=@post.updated_at.strftime("%A,%B,%e,%Y")%> by <%=@post.user.username%> | <%= pluralize(@post.views, "view")%>
      </p>
      <hr class="my-4">
      <div class="my-4">
        <div class="post_body">
          <%= @post.body%>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="jumbotron" style="width:100%">
      <h1 class="display-4">
        <% unless @post.comments.empty?%>
        <strong> <%= @post.comments.size %></strong> <%= pluralize(@post.comments, "comment")%> 
        <% else %>
        No comment for this post
        <% end %>
      </h1>
      <%= render @post.comments%>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="jumbotron" style="width:100%">
      <h1 class="display-4">
        <div>
        <h3>Leave a comment</h3>
      </h1>
        <%= render 'comments/form' %>
      </div>
    </div>
  </div>
</div>